<h1><%= @summary.name %></h1>

 <div class="row">
   <div class="col-md-8">
     <p class="lead"><%= @summary.description %></p>
     <% @posts.each do |post| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to post.title, post %>
           </h4>
         </div>
       </div>
     <% end %>
 </div>